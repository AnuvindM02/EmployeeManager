@model EmployeeUpdateRequest
@{
    ViewBag.Title = "Edit Employee";
}


<form asp-controller="Home" asp-action="Edit" method="post">

    <input type="hidden" asp-for="EmployeeID" />


    <div class="box">

        <h2>Edit Employee</h2>

        <div class="mb-3">
            <label asp-for="EmployeeName" class="form-label">Employee Name</label>
            <input type="text" asp-for="EmployeeName" class="form-control">
            <span asp-validation-for="EmployeeName" class="validation-text"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Position" class="form-label">Position</label>
            <input type="text" asp-for="Position" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="text" asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="validation-text"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Gender" class="form-label">Gender</label>
            @{
                string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
            }
            @foreach (string gender in genders)
            {
                <input type="radio" asp-for="Gender" value="@gender" />
                <label for="@gender">@gender</label>
            }
            <br />
            <span asp-validation-for="Gender" class="validation-text"></span>

        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-outline-success">Update</button>



        <div asp-validation-summary="All"></div>

        @if (ViewBag.Errors != null)
        {
            <div class="validation-text">
                <ul>
                    @foreach (string error in ViewBag.Errors)
                    {
                        <li class="validation-text">@error</li>
                    }
                </ul>
            </div>
        }
    </div>
</form>

@* JQuery for validation
 *@
@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
    }