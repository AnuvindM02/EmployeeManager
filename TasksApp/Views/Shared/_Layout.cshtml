<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .validation-text{
            color:red;
            font-family:monospace;
        }
        .box{
            width:500px;
            margin:auto;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg mb-5 navbar-dark" style="background-color: #40646e;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Employee App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link active" asp-controller="Home" asp-action="Create">Add Employee</a>
@*                     <a class="nav-link active" asp-controller="Home" asp-action="AllTasks">Tasks</a>
 *@                </div>
            </div>
        </div>
    </nav>

    <div class="m-3">
        @RenderBody()
    </div>

    @RenderSection("scripts",required:false)
</body>
</html>
